<style>
    /* Style pour centrer le formulaire */
    .centered-form {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Pour prendre toute la hauteur de la fenêtre */
        margin: 0; /* Réinitialisation des marges */
        padding: 0; /* Réinitialisation des paddings */
        background-color: rgba(135, 206, 235, 0.5); /* Fond bleu ciel transparent */
    }

    /* Style pour agrandir le formulaire */
    .custom-form {
        max-width: 500px; /* Largeur maximale du formulaire */
        width: 100%; /* Pour occuper toute la largeur disponible */
        padding: 20px; /* Espacement interne */
        border-radius: 10px; /* Coins arrondis */
        background-color: white; /* Couleur de fond du formulaire */
    }

    /* Style pour les boutons */
    .custom-form .btn {
        width: 100%; /* Pour occuper toute la largeur du bouton */
        margin-top: 10px; /* Espacement entre les boutons */
    }
</style>

<div class="centered-form">
    <form action="{{ path('app_form') }}" method="post" class="custom-form">
        <div class="form-group">
            <label for="name">Nom</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Votre nom" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Votre adresse email" required>
        </div>
        <div class="form-group">
            <label for="subject">Sujet</label>
            <input type="text" id="subject" name="subject" class="form-control" placeholder="Sujet du message" required>
        </div>
        <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" class="form-control" placeholder="Votre message" rows="4" required></textarea>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Envoyer</button>
            <button type="reset" class="btn btn-secondary">Annuler</button>
        </div>
    </form>
</div>
